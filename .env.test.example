# Test Environment Configuration for Playwright Tests
# Copy this file to .env.test and configure with your test credentials

# Backend API URL (should match webServer config in playwright.config.js)
API_URL=http://localhost:4000/api

# Frontend App URL (should match baseURL in playwright.config.js)
APP_URL=http://localhost:3000

# Test Admin User Credentials
# Create a test admin user in your development database
TEST_ADMIN_EMAIL=admin@test.com
TEST_ADMIN_PASSWORD=testpassword123

# Test Alumni User Credentials
# Create a test alumni user in your development database
TEST_ALUMNI_EMAIL=alumni@test.com
TEST_ALUMNI_PASSWORD=testpassword123

# Database Configuration for Test Database
# Optional: If using a separate test database
DATABASE_URL="postgresql://user:password@localhost:5432/lift_test"
